<h1>Create A Playdate!</h1>

  <form method='post' action='/playdates'>
  <p><label for='title'>Title</label>
  <input type='text' id='title' name='title' /></p>
  <p><label for='date'>Date</label>
  <input type='date' id='date' name='date' /></p>


   <p><label>Babies</label></p>
   <%current_user.babies.each do |b|%>
     <input id='<%=b.name%>' type="checkbox" name="babies[]" value="<%=b.id%>"><%=b.name%>
    <%end%>

  <p><label for='location'>Location:</label>
  <input type='text' id='location' name='location' /></p>
  <p><label for='zipcode'>Zip Code:</label>
  <input type='text' id='zipcode' name='zipcode' /></p>
  <label for='description'>Description:</label>

  <textarea id="description" name="description" rows="4" cols="50">
   information about the playdate!
  </textarea>
  <br><br>
  <input type='submit' value='Create a playdate'>
  </form>


  
  
  